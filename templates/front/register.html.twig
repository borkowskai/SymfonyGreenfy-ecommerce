{% extends "base.html.twig" %}

{% block title %}
	{{ parent() }}
{% endblock %}


{% block content %}

	<!-- Breadcrumb Section Begin -->
	<div class="breacrumb-section">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcrumb-text">
						<a href="#">
							<i class="fa fa-home"></i>
							Home</a>
						<span>Register</span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Breadcrumb Form Section Begin -->

	<!-- Register Section Begin -->
	<div class="register-login-section spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 offset-lg-3">
					<div class="register-form">
						<h2>Register</h2>
						{{ form_start (registerForm) }}
						<div class="group-input">
							<label for="username">First Name *</label>
							{# <input type="text" id="username"> #}
							{{ form_widget (registerForm.firstName, {'attr':{'id' : 'username'}}) }}
							<div class="invalid-feedback">
								Valid first name is required.
								{{form_errors(registerForm.firstName)}}
							</div>
						</div>
                        <div class="group-input">
							<label for="username">Last lastName *</label>
							{# <input type="text" id="username"> #}
							{{ form_widget (registerForm.lastName, {'attr':{'id' : 'username'}}) }}
							<div class="invalid-feedback">
								Valid last name is required.
								{{form_errors(registerForm.lastName)}}
							</div>
						</div>
                        <div class="group-input">
							<label for="username">Email *</label>
							{# <input type="text" id="username"> #}
							{{ form_widget (registerForm.email, {'attr':{'id' : 'username'}}) }}
							<div class="invalid-feedback">
								Valid email required.
								{{form_errors(registerForm.email)}}
							</div>
						</div>
						<div class="group-input">
							<label for="pass">Password *</label>
							{{ form_widget (registerForm.password.first, {'attr':{'id' : 'pass'}}) }}
							<div class="invalid-feedback">
								Valid password is required.
								{{form_errors(registerForm.password.first)}}
							</div>
						</div>
						<div class="group-input">
							<label for="con-pass">Confirm Password *</label>
                            {{ form_widget (registerForm.password.second, {'attr':{'id' : 'con-pass'}}) }}
						</div>
						<button type="submit" class="site-btn register-btn">REGISTER</button>
					 {{ form_end(registerForm) }}
					{# <div class="switch-login">
						<a href="./login.html" class="or-login">Or Login</a>
					</div> #}
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Register Form Section End -->{% endblock %}{% block javascripts %}
{{ parent() }}{% endblock %}
