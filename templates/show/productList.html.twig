{% for product in products %}
    <div class="col-lg-4 col-sm-6">
        <div class="product-item">
            <div class="pi-pic">
            {# concat concatenation #}
                <img src="{{ asset ('dossierFichiers/' ~ product.photo  ) }}" alt="{{ product.name }}">
                {# <div class="sale pp-sale">Sale</div> #}
                <div class="icon">
                    <i class="icon_heart_alt wish" id="icon_heart_alt_wish"></i>
                </div>
                <ul>
                {# <li class="w-icon active basket"><a href="#"><i class="icon_bag_alt"></i></a></li> #}
                    <li class="w-icon active basket"><a href="{{ path('cart_add', {id : product.id }) }}" data-basket-id={{product.id}}><i class="icon_bag_alt"></i></a></li>
                    <li class="quick-view"><a href="{{ path ('show-product', { id : product.id }) }}">+ Quick View</a></li>
                    {# <li class="w-icon"><a href="{{ path('cart_add', {id : product.id }) }}" data-basket-id={{product.id}}><i class="fa fa-random"></i></a></li> #}
                </ul>
            </div>
            <div class="pi-text">
            {# TODO #}
                <div class="catagory-name"> {{ product.getPlantType.GetName }} </div>
                <a href="#">
                    <h5>{{ product.name }}</h5>
                </a>
                <div class="product-price">
                    Price {{ product.priceExclVAT }}
                    {# <span>{{ product.priceExclVAT * 1.2}} </span> #}
                </div>
                <div class="product-price">
                    Price VAT {{ product.priceVAT }}
                    {# <span>{{ product.priceVAT * 1.2}}</span> #}
                </div>
            </div>
        </div>
    </div>
{% endfor %}