{% extends "base.html.twig" %}

{% block title %} {{ parent() }} {% endblock %}


{% block content %}
    <!-- Breadcrumb Section Begin -->
    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <a href="{{ path ('index') }}"><i class="fa fa-home"></i> Home</a>
                        <span>Shop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Section Begin -->

    <!-- Product Shop Section Begin -->
    <section class="product-shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-8 order-2 order-lg-1 produts-sidebar-filter">
                    <div class="filter-widget">
                        <h4 class="fw-title">Categories</h4>
                        <div class="fw-brand-check">
                            {# -------- show size/cathegories  ----------#}
                            {% for size in sizes %}
                                <div class="bc-item">
                                    <label for="bc-'{{size.name}}'">
                                        {{ size.name }}
                                        <input type="checkbox" id="bc-{{size.name}}">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            {% endfor %}
                            {# -------- end size/cathegories  ----------#}
                        </div>
                    </div>
                    <div class="filter-widget">
                        <h4 class="fw-title">Prix</h4>
                        <div class="filter-range-wrap">
                            <div class="range-slider">
                                <div class="price-input">
                                    <input type="text" id="minamount">
                                    <input type="text" id="maxamount">
                                </div>
                            </div>
                            <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                                data-min="33" data-max="98">
                                <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                                <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                            </div>
                        </div>
                        <a href="#" class="filter-btn">Filtres</a>
                    </div>
                    <div class="filter-widget">
                        <h4 class="fw-title">Color</h4>
                        <div class="fw-color-choose">
                            {# -------- show colors  ----------#}
                            {% for color in colors %}
                                <div class="cs-item">
                                    <input type="radio" id="cs-{{color.name}}" class="colors">
                                    <label class="cs-{{color.name}}" for="cs-{{color.name}}">{{ color.name|lower  }}</label>
                                </div>

                            {% endfor %}
                            {# -------- show colors end ----------#}
                        </div>
                    </div>


                </div>
                <div class="col-lg-9 order-1 order-lg-2">
                    <div class="product-show-option">
                        <div class="row">
                            <div class="col-lg-7 col-md-7">
                                <div class="select-option">
                                    <select class="sorting">
                                        <option value="">Default Sorting</option>
                                    </select>
                                    <select class="p-show">
                                        <option value="">Show:</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-5 col-md-5 text-right">
                                <p>Show 01- 09 Of 36 Product</p>
                            </div>
                        </div>
                    </div>
                    <div class="product-list">
                        <div class="row">
                            {# ----------- show products -------------#}
                            {% for product in products %}
                                <div class="col-lg-4 col-sm-6">
                                    <div class="product-item">
                                        <div class="pi-pic">
                                        {# concat concatenation #}
                                            <img src="{{ asset ('dossierFichiers/' ~ product.photo  ) }}" alt="{{ product.name }}">
                                            {# <div class="sale pp-sale">Sale</div> #}
                                            <div class="icon">
                                                <i class="icon_heart_alt"></i>
                                            </div>
                                            <ul>
                                            {# <li class="w-icon active"><a href="#"><i class="icon_bag_alt"></i></a></li> #}
                                                <li class="w-icon active"><a href="{{ path ('add-orderLine', { id : product.id }) }}"><i class="icon_bag_alt"></i></a></li>
                                                <li class="quick-view"><a href="{{ path ('show-product', { id : product.id }) }}">+ Quick View</a></li>
                                                <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="pi-text">
                                        {# TODO #}
                                            <div class="catagory-name"> {{ product.getPlantType.GetName }} </div>
                                            <a href="#">
                                                <h5>{{ product.name }}</h5>
                                            </a>
                                            <div class="product-price">
                                                Price {{ product.priceExclVAT }}
                                                {# <span>{{ product.priceExclVAT * 1.2}} </span> #}
                                            </div>
                                            <div class="product-price">
                                                Price VAT {{ product.priceVAT }}
                                                {# <span>{{ product.priceVAT * 1.2}}</span> #}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            {# ----------- show products  end-------------#}



                        </div>
                    </div>
                    <div class="loading-more">
                        <i class="icon_loading"></i>
                        <a href="#">
                            Loading More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Shop Section End -->
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>

</script>

{% endblock %}